{
  "compilerOptions": {
      "module": "commonjs",
      "declaration": false,
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es5",
      "lib": [
        "es2016",
        "es2017",
        "es2018",
        "es2019"
      ],
      "sourceMap": true,
      "allowJs": true,
      "outDir": "./dist",
      "baseUrl": "./src"
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ],
}
